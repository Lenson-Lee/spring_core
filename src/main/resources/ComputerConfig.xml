<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">
    <bean id="computer" class="com.spring.core.quiz.Computer">
        <constructor-arg ref="mouse"/>
        <constructor-arg ref="monitor"/>
        <constructor-arg ref="keyboard"/>

<!--//XML. 사용법 최근 추세는 스프링이지만 회사에서 XML 써야한다면 구글에 Spring xml 설정 java 설정 치면 바꾸는 법 뜬다.-->

    </bean>
    <bean id="mouse" class="com.spring.core.quiz.Mouse"/>
    <bean id="monitor" class="com.spring.core.quiz.Monitor"/>
    <bean id="keyboard" class="com.spring.core.quiz.Keyboard" />
</beans>

